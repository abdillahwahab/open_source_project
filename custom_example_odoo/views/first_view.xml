<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--GANT View of FISRT MODEL-->
    <record id="first_gant_view" model="ir.ui.view">
        <field name="name">first.gant.view</field>
        <field name="model">class.first</field>
        <field name="arch" type="xml">
            <gantt string="gantt of First Model" color="name" date_delay="datetime_field" date_start="date_field" >
                <field name="name"  />
                <level object="class.second" link="city_id" >
                    <field name="name"/>
                </level>
            </gantt>
        </field>
        <!--THIS VIEW STILL BUG. -->
    </record>

    <!--CALENDAR View of FISRT MODEL-->
    <record id="first_calendar_view" model="ir.ui.view">
        <field name="name">first.calendar.view</field>
        <field name="model">class.first</field>
        <field name="arch" type="xml">
            <calendar string="calendar of First Model" color="name" date_delay="datetime_field" date_start="date_field" >
                <field name="name"  />
                <field name="date_field" />
                <field name="datetime_field" />
                
            </calendar>
        </field>
    </record>

    <!--PIVOT View of FISRT MODEL-->
    <record id="first_pivot_view" model="ir.ui.view">
        <field name="name">first.pivot.view</field>
        <field name="model">class.first</field>
        <field name="arch" type="xml">
            <pivot string="pivot of First Model">
                <field name="name" type="row" />
                <field name="number_interger" type="col" />
                <field name="number_float" type="col" />
            </pivot>
        </field>
    </record>

    <!--GRAPH View of FISRT MODEL-->
    <record id="first_graph_view" model="ir.ui.view">
        <field name="name">first.graph.view</field>
        <field name="model">class.first</field>
        <field name="arch" type="xml">
            <graph string="graph of First Model">
                <field name="name" type="row" />
                <field name="number_interger" type="col" />
                <field name="number_float" type="col" />
            </graph>
        </field>
    </record>

    <!--KAMBAN View of FISRT MODEL-->
    <record id="first_kanban_view" model="ir.ui.view">
        <field name="name">first.kamban.view</field>
        <field name="model">class.first</field>
        <field name="arch" type="xml">
            <kanban>
                <!--list of field to be loaded -->
                <field name="name" />
                <field name="text_field" />
                <templates>
                <t t-name="kanban-box">
                        <div class="oe_product_vignette">
                            <!--this for take image-->
                            <!--a type="open">
                                <img class="oe_kanban_image"
                                    t-att-src="kanban_image('class.first', 'image', record.id.value)" />
                            </a-->
                            <div class="oe_product_desc">
                                <h4>
                                    <a type="edit">
                                        <field name="name"></field>
                                    </a>
                                </h4>
                                <ul>
                                    <li>
                                        <field name="text_field"></field>
                                    </li>
                                    <li> 
                                        <field name="city_id"></field>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--TREE View of FISRT MODEL-->
    <record id="first_tree_view" model="ir.ui.view">
        <field name="name">first.tree.view</field>
        <field name="model">class.first</field>
        <field name="arch" type="xml">
            <tree string="Tree of First Model">
                <field name="name" />
                <field name="number_interger" />
                <field name="number_float" />
                <field name="date_field" />
                <field name="datetime_field" />
                <field name="text_field" />
                <field name="boolean_field" />
                <field name="selection_field" />
                <field name="city_id" />
                <field name="partner_id" />
                <field name="lines" />
            </tree>
        </field>
    </record>

    <!--FORM View of FISRT MODEL-->
    <record id="first_form_view" model="ir.ui.view">
        <field name="name">first.form.view</field>
        <field name="model">class.first</field>
        <field name="arch" type="xml">
            <form string="Form Giro">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="number_interger" />
                            <field name="number_float" />
                            <field name="date_field" />
                            <field name="city_id" />
                            <field name="partner_id" />
                        </group>
                        <group>
                            <field name="datetime_field" />
                            <field name="text_field" />
                            <field name="boolean_field" />
                            <field name="selection_field" />
                            <field name="lines" />
                        </group>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_first_class" model="ir.actions.act_window">
        <field name="name">action first class</field>
        <field name="res_model">class.first</field>
        <field name="view_type">form</field>
        <field name="view_mode">gantt,calendar,graph,pivot,kanban,tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create the frist record
            </p>
        </field>
    </record>

    <menuitem id="fisrt_top_menu" name="MENU FIRST" sequence="0" />
    <menuitem id="fisrt_sub_menu" name="MENU FIRST in SUB" sequence="0" parent="fisrt_top_menu" />
    <menuitem id="first_menu_action" action="action_first_class" name="Action Menu Execute" sequence="0" parent="fisrt_sub_menu"/>

</odoo>